import rclpy
from rclpy.node import Node
from geometry_msgs.msg import Pose, PoseArray

class PosePublisher(Node):
    def __init__(self):
        super().__init__('pose_publisher')
        self.pub = self.create_publisher(PoseArray, '/world/rf_world/pose/info', 10)
        self.timer = self.create_timer(1.0, self.publish_poses)  # 1 Hz

        # hardcoded positions for emitter and observer
        self.emitter_pose = Pose()
        self.emitter_pose.position.x = 0.0
        self.emitter_pose.position.y = 0.0
        self.emitter_pose.position.z = 0.0

        self.observer_pose = Pose()
        self.observer_pose.position.x = 5.0
        self.observer_pose.position.y = 0.0
        self.observer_pose.position.z = 0.0

    def publish_poses(self):
        msg = PoseArray()
        msg.poses.append(self.emitter_pose)
        msg.poses.append(self.observer_pose)
        self.pub.publish(msg)
        self.get_logger().info("Published PoseArray with emitter and observer positions")

def main(args=None):
    rclpy.init(args=args)
    node = PosePublisher()
    rclpy.spin(node)
    rclpy.shutdown()

if __name__ == "__main__":
    main()
